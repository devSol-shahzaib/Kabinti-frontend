
{{#if isManager}}
<h1 class="main-heading">Shifts you added</h1>
<table class="table table-dark custom-tbl">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Assigned on</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each shifts as |shift|}}
    {{> shift-info shift}}
    </tr>
    {{/each}}
   </tbody>
  </table>

 
{{else}}
<h1 class="main-heading">Your availibilities</h1>
<table class="table table-dark custom-tbl">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Created At</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each slots as |slot|}}
    {{> slot-info slot}}
    </tr>
    {{/each}}
   </tbody>
  </table>

{{/if}}
